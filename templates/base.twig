		{{ function('wp_head') }}

		{% block styles %}
			<link rel="stylesheet" href="{{ site.theme.link }}/public/css/vendor.css" type="text/css">
			<link rel="stylesheet" href="{{ site.theme.link }}/public/css/site.css" type="text/css">
		{% endblock %}
	</head>

	<body class="{{ body_class }}">
		<div id="page">
			{% block header %}
				{% include 'partials/header.twig' %}
			{% endblock %}

			<section id="content" role="main" class="content-wrapper">
				<div class="wrapper {{sidebar_class}}">
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>
				{% if sidebar %}
					<aside class="layout-sidebar">
						{{sidebar}}
					</aside>
				{% endif %}
			</section>

			{% block footer %}
				{% include 'partials/footer.twig' %}
			{% endblock %}
		</div>

		<div id="mobile-menu-container">
			<nav id="nav-mobile" class="nav-mobile" role="navigation">
				{% include "partials/menu.twig" with {'menu': menu.mobile} %}
			</nav>
		</div>

		{% block scripts %}
			<script type="text/javascript" src="{{ site.theme.link }}/public/js/vendor.js"></script>
			<script type="text/javascript" src="{{ site.theme.link }}/public/js/site.js"></script>
		{% endblock %}

		{{ function('wp_footer') }}
	</body>
